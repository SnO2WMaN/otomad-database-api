{
  "importMap": "./import_map.json",
  "tasks": {
    "dev": "deno run --watch -A --unstable ./mod.ts",
    "test": "deno test",
    "lint": "deno lint",
    "generate:authenticator": "deno run --allow-read https://deno.land/x/grpc_basic@0.4.6/gen/dts.ts ./proto/authenticator.proto > ./proto/authenticator.d.ts",
    "generate-keys": "deno run --allow-write --unstable ./utils/generate_keys.ts"
  },
  "fmt": {
    "options": {
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "useTabs": false
    },
    "files": {
      "exclude": [
        "./lock.json",
        "./proto/*.d.ts"
      ]
    }
  }
}
