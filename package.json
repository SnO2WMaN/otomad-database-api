{
  "name": "api",
  "version": "1.0.0",
  "packageManager": "pnpm@7.17.1",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "codegen": "graphql-codegen-esm",
    "dev": "run-p 'dev:*'",
    "dev:node": "nodemon -w dist/ -e json,js dist/index.js",
    "dev:tsc": "tsc -w --preserveWatchOutput",
    "dev:gql": "graphql-codegen-esm -w",
    "build": "tsc",
    "fmt": "prettier --write ./**/*.{js,ts,json,yml,md}",
    "typecheck": "tsc --noEmit",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:prettier": "prettier --check ./**/*.{js,ts,json,yml,md}",
    "lint:schema": "graphql-schema-linter ./schema.gql",
    "lintfix:eslint": "pnpm run lint:eslint --fix",
    "migration:generate": "run(){ pnpm run typeorm migration:generate -p \"src/db/migrations/$1\"; }; run",
    "start": "node --loader ts-node/esm src/index.ts",
    "type-check": "tsc --noEmit",
    "typeorm": "typeorm-ts-node-esm -d ./src/db/data-source.ts",
    "test": "node --loader ts-node/esm src/tools/basic-test.ts"
  },
  "nodemonConfig": {
    "delay": 100
  },
  "repository": "https://github.com/otomad-database/api",
  "license": "MIT",
  "devDependencies": {
    "@graphql-codegen/cli": "^2.14.1",
    "@graphql-codegen/typescript": "^2.8.2",
    "@graphql-codegen/typescript-resolvers": "^2.7.7",
    "@types/koa": "^2.13.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "graphql-schema-linter": "^3.0.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@graphql-tools/schema": "^9.0.10",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@whatwg-node/server": "^0.4.17",
    "argon2": "^0.30.2",
    "graphql": "^16.6.0",
    "graphql-yoga": "^3.1.1",
    "jose": "^4.11.1",
    "koa": "^2.14.0",
    "koa-body": "^6.0.1",
    "koa-logger": "^3.2.1",
    "pg": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10",
    "ulid": "^2.3.0",
    "zod": "^3.19.1"
  }
}