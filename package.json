{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p 'codegen:watch' 'rollup:watch' 'nodemon'",
    "nodemon": "nodemon -w dist dist/index.mjs",
    "rollup:build": "rollup --config ./rollup.config.js",
    "rollup:watch": "rollup --config ./rollup.config.js --watch",
    "codegen": "graphql-codegen-esm",
    "codegen:watch": "graphql-codegen-esm --watch",
    "prisma:client": "prisma generate",
    "build": "run-s 'prisma:client' 'codegen' 'rollup:build'",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "run-s 'lint:*'",
    "lint:eslint": "eslint . --ext \".js,.jsx,.ts,.tsx\"",
    "lint:eslint:report": "npm run lint:eslint -- --format json --output-file .eslint-report.json",
    "lint:prettier": "prettier --check \"./**/*.{js,mjs,ts,json,yml,md,graphql}\"",
    "lint:graphql-schema-linter": "graphql-schema-linter ./src/schema.graphql",
    "lint:graphql-schema-linter:report": "npm run --silent lint:graphql-schema-linter -- --format json  > .graphql-schema-linter-report.json",
    "lintfix": "run-s 'lintfix:*' 'fmt'",
    "lintfix:eslint": "npm run lint:eslint -- --fix",
    "fmt": "npm run lint:prettier -- --write"
  },
  "repository": "https://github.com/otomad-database/api",
  "license": "MIT",
  "dependencies": {
    "@devoxa/prisma-relay-cursor-connection": "^2.2.2",
    "@envelop/generic-auth": "^5.0.6",
    "@envelop/prometheus": "^7.0.4",
    "@graphql-tools/schema": "^9.0.10",
    "@prisma/client": "4.11.0",
    "argon2": "^0.30.2",
    "auth0": "^3.3.0",
    "cookie": "^0.5.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^3.3.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "meilisearch": "^0.32.0",
    "neo4j-driver": "^5.3.0",
    "pg": "^8.8.0",
    "pino": "^8.10.0",
    "pino-pretty": "^10.0.0",
    "ulid": "^2.3.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/schema-ast": "^3.0.0",
    "@graphql-codegen/typescript": "^3.0.0",
    "@graphql-codegen/typescript-resolvers": "^3.0.0",
    "@graphql-tools/executor-http": "^0.1.9",
    "@graphql-tools/utils": "^9.1.3",
    "@rollup/plugin-graphql": "^2.0.3",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/auth0": "^3.3.1",
    "@types/cookie": "^0.5.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "8.37.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "eslint-plugin-vitest": "^0.0.57",
    "graphql-schema-linter": "^3.0.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "prisma": "4.11.0",
    "rollup": "^3.20.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitest": "^0.29.0",
    "vitest-mock-extended": "^1.0.9"
  }
}
