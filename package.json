{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p 'codegen:watch' 'rollup:watch' 'nodemon'",
    "nodemon": "nodemon -w dist dist/index.mjs",
    "rollup:build": "rollup --config ./rollup.config.js",
    "rollup:watch": "rollup --config ./rollup.config.js --watch",
    "codegen": "graphql-codegen-esm",
    "codegen:watch": "graphql-codegen-esm --watch",
    "prisma:client": "prisma generate",
    "build": "run-s 'prisma:client' 'codegen' 'rollup:build'",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "run-s 'lint:*'",
    "lint:eslint": "eslint . --ext \".js,.jsx,.ts,.tsx\"",
    "lint:eslint:report": "npm run lint:eslint -- --format json --output-file .eslint-report.json",
    "lint:prettier": "prettier --check \"./**/*.{js,mjs,ts,json,yml,md,graphql}\"",
    "lint:graphql-schema-linter": "graphql-schema-linter ./src/schema.graphql",
    "lint:graphql-schema-linter:report": "npm run --silent lint:graphql-schema-linter -- --format json  > .graphql-schema-linter-report.json",
    "lintfix": "run-s 'lintfix:*' 'fmt'",
    "lintfix:eslint": "npm run lint:eslint -- --fix",
    "fmt": "npm run lint:prettier -- --write"
  },
  "repository": "https://github.com/otomad-database/api",
  "license": "MIT",
  "dependencies": {
    "@devoxa/prisma-relay-cursor-connection": "^3.0.0",
    "@envelop/generic-auth": "^5.0.6",
    "@envelop/prometheus": "^7.0.4",
    "@prisma/client": "5.3.1",
    "auth0": "^3.3.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^3.3.0",
    "ioredis": "^5.3.1",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "meilisearch": "^0.34.0",
    "neo4j-driver": "^5.3.0",
    "pg": "^8.8.0",
    "pino": "^8.10.0",
    "pino-pretty": "^10.0.0",
    "ulid": "^2.3.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "7.22.20",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/client-preset": "4.1.0",
    "@graphql-codegen/schema-ast": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-tools/executor-http": "1.0.2",
    "@graphql-tools/schema": "10.0.0",
    "@graphql-tools/utils": "10.0.6",
    "@graphql-typed-document-node/core": "3.2.0",
    "@rollup/plugin-graphql": "2.0.3",
    "@rollup/plugin-terser": "0.4.3",
    "@rollup/plugin-typescript": "11.1.4",
    "@types/auth0": "3.3.6",
    "@types/node": "20.7.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "eslint-plugin-vitest": "0.3.1",
    "graphql-schema-linter": "3.0.1",
    "nodemon": "3.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "prisma": "5.3.1",
    "rollup": "3.29.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "vitest": "0.34.5",
    "vitest-mock-extended": "1.2.1"
  }
}
