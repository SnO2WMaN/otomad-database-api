{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p 'dev:*'",
    "dev:tsup": "tsup --watch",
    "dev:codegen": "npm run codegen -- --watch",
    "dev:nodemon": "nodemon -w dist/index.js dist/index.js",
    "prebuild": "run-p 'prebuild:*'",
    "prebuild:codegen": "npm run codegen",
    "prebuild:prisma": "npm run prisma:client",
    "build": "tsup",
    "codegen": "graphql-codegen-esm",
    "prisma:client": "prisma generate",
    "test": "vitest",
    "test:migration": "PRISMA_DATABASE_URL=$TEST_PRISMA_DATABASE_URL prisma migrate reset --force",
    "typecheck": "tsc --noEmit",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:prettier": "prettier --check ./**/*.{js,mjs,ts,json,yml,md,graphql}",
    "lint:schema": "graphql-schema-linter ./schema.graphql",
    "lintfix": "run-s 'lintfix:*' 'fmt'",
    "lintfix:eslint": "npm run lint:eslint -- --fix",
    "fmt": "npm run lint:prettier -- --write"
  },
  "repository": "https://github.com/otomad-database/api",
  "license": "MIT",
  "dependencies": {
    "@envelop/prometheus": "^7.0.4",
    "@graphql-tools/schema": "^9.0.10",
    "@prisma/client": "^4.9.0",
    "argon2": "^0.30.2",
    "cookie": "^0.5.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^3.3.0",
    "neo4j-driver": "^5.3.0",
    "pg": "^8.8.0",
    "pino": "^8.10.0",
    "pino-pretty": "^9.2.0",
    "ulid": "^2.3.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/schema-ast": "^3.0.0",
    "@graphql-codegen/typescript": "^3.0.0",
    "@graphql-codegen/typescript-resolvers": "^3.0.0",
    "@graphql-tools/executor-http": "^0.1.8",
    "@graphql-tools/utils": "^9.1.3",
    "@graphql-yoga/plugin-disable-introspection": "^0.5.1",
    "@types/cookie": "^0.5.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "8.34.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "graphql-schema-linter": "^3.0.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "prisma": "^4.9.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vitest": "^0.28.5"
  }
}