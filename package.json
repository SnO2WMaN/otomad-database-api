{
  "name": "api",
  "version": "1.0.0",
  "packageManager": "pnpm@7.17.1",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p 'dev:*'",
    "dev:build": "pnpm run build --watch",
    "dev:codegen": "pnpm run codegen --watch",
    "dev:nodemon": "nodemon -w dist/index.js dist/index.js",
    "prebuild": "run-p codegen",
    "build": "tsup",
    "codegen": "graphql-codegen-esm",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "pnpm run test --watch",
    "typecheck": "tsc --noEmit",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:prettier": "prettier --check ./**/*.{js,mjs,ts,json,yml,md,graphql}",
    "lint:schema": "graphql-schema-linter ./src/schema.graphql",
    "lintfix": "run-s 'lintfix:*' 'fmt'",
    "lintfix:eslint": "pnpm run lint:eslint --fix",
    "fmt": "pnpm run lint:prettier --write",
    "typeorm": "typeorm-ts-node-esm -d ./src/db/data-source.ts",
    "migration:run": "pnpm run typeorm migration:run",
    "migration:generate": "run(){ pnpm run typeorm migration:generate -p \"src/db/migrations/$1\"; }; run"
  },
  "repository": "https://github.com/otomad-database/api",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.0",
    "@graphql-tools/schema": "^9.0.10",
    "@whatwg-node/server": "^0.4.17",
    "argon2": "^0.30.2",
    "fastify": "^4.11.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^3.3.0",
    "neo4j-driver": "^5.3.0",
    "pg": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10",
    "ulid": "^2.3.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@graphql-codegen/cli": "^2.14.1",
    "@graphql-codegen/schema-ast": "^2.6.0",
    "@graphql-codegen/typescript": "^2.8.2",
    "@graphql-codegen/typescript-resolvers": "^2.7.7",
    "@graphql-tools/utils": "^9.1.3",
    "@jest/globals": "^29.3.1",
    "@swc/core": "^1.3.21",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "graphql-schema-linter": "^3.0.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "@whatwg-node/server@0.4.17": "patches/@whatwg-node__server@0.4.17.patch"
    }
  }
}
